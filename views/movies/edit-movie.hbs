<div>
  <h3>Update the movie:</h3>
  <form action="/movies/{{singleMovie.id}}/edit" method="post">
    <label for="title">Title:</label>
    <input type="text" name="title" value="{{singleMovie.title}}"/>
    <label for="genre">Genre:</label>
    <input type="text" name="genre" value="{{singleMovie.genre}}"/>
    <label for="plot">Plot:</label>
    <input type="text" name="plot" value="{{singleMovie.plot}}"/>
    <label for="cast">Cast:</label>
    <select name="cast" multiple="true">

      {{#each celebrities}}
        <option value="{{this._id}}">{{this.name}}</option>
      {{/each}}
    </select>
    <button>Add</button>
  </form>
</div>